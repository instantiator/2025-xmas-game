{
  "$schema": "../../public/game-repository-schema.json",
  "games": {
    "test-game": {
      "id": "test-game",
      "title": "Test Game",
      "modules": {
        "camera": {
          "enabled": true
        }
      },
      "displays": [
        {
          "purpose": "game-overview-title",
          "component": {
            "type": "template",
            "foregroundTemplate": {
              "sourceType": "embedded",
              "content": "<h1 style='color: white;'>{{gameData.title}}</h1>"
            },
            "backgroundTemplate": {
              "sourceType": "embedded",
              "content": ""
            },
            "backgroundStyle": {
              "background": "black",
              "backgroundImage": "url('/samples/test-game/lava-cave-01.jpeg')",
              "backgroundSize": "cover",
              "backgroundPosition": "center"
            },
            "data": {}
          }
        }
      ],
      "stages": [],
      "gameContainerStyle": {
        "backgroundColor": "#222222",
        "borderRadius": "5px"
      }
    },
    "magic-trifle": {
      "id": "magic-trifle",
      "title": "Nana's Magic Trifle",
      "modules": {
        "camera": {
          "enabled": false
        }
      },
      "displays": [
        {
          "purpose": "game-overview-title",
          "component": {
            "type": "template",
            "foregroundTemplate": {
              "sourceType": "embedded",
              "content": "<p style=\"text-align: center;\"><img id=\"magic-trifle-title\" src=\"/samples/magic-trifle/title/foreground.png\" style=\"width: 80%;\" /></p>"
            },
            "backgroundTemplate": {
              "sourceType": "embedded",
              "content": ""
            },
            "backgroundStyle": {
              "background": "black",
              "backgroundImage": "url('/samples/magic-trifle/title/background.png')",
              "backgroundSize": "cover",
              "backgroundPosition": "center"
            },
            "data": {}
          }
        },
        {
          "purpose": "game-overview-stages",
          "component": {
            "type": "template",
            "foregroundTemplate": {
              "sourceType": "embedded",
              "content": "<h1>Stages</h1><ul>{{#gameState.stages}}<li id=\"stages-link-{{stage.id}}\">{{stage.id}}</li>{{/gameState.stages}}</ul>"
            },
            "backgroundTemplate": {
              "sourceType": "embedded",
              "content": ""
            },
            "backgroundStyle": {
              "background": "lightgrey"
            },
            "data": {}
          },
          "clickIdToStageId": {
            "stages-link-stage-1": "stage-1"
          }
        }
      ],
      "stages": [
        {
          "id": "stage-1",
          "challenges": [
            {
              "id": "stage-1-challenge-1",
              "displays": [
                {
                  "purpose": "challenge-in-progress",
                  "component": {
                    "type": "scroll",
                    "data": {},
                    "text": "This is the first prompt"
                  }
                }
              ],
              "solution": {
                "answers": ["ANSWER"],
                "hints": []
              }
            }
          ]
        }
      ],
      "gameContainerStyle": {
        "backgroundColor": "#222222",
        "borderRadius": "20px",
        "boxShadow": "rgba(0, 0, 0, 0.12) 0px 1px 3px, rgba(0, 0, 0, 0.24) 0px 1px 2px"
      }
    }
  }
}
