{
  "$schema": "./schemas/game-repository-schema.json",
  "games": {
    "test-game": {
      "id": "test-game",
      "title": "Test Game",
      "modules": {
        "camera": {
          "enabled": true
        }
      },
      "displays": [
        {
          "purpose": "game-overview-title",
          "component": {
            "type": "template",
            "foregroundTemplate": {
              "sourceType": "embedded",
              "content": "<h1 style='color: white;'>{{gameData.title}}</h1>"
            },
            "backgroundTemplate": {
              "sourceType": "embedded",
              "content": ""
            },
            "backgroundStyle": {
              "background": "black",
              "backgroundImage": "url('/samples/test-game/lava-cave-01.jpeg')",
              "backgroundSize": "cover",
              "backgroundPosition": "center"
            },
            "data": {}
          }
        }
      ],
      "stages": [],
      "gameContainerStyle": {
        "backgroundColor": "#222222",
        "borderRadius": "5px"
      }
    },
    "magic-trifle": {
      "id": "magic-trifle",
      "title": "Nana's Magic Trifle",
      "modules": {
        "camera": {
          "enabled": false
        }
      },
      "resources": {
        "title-background": { "type": "local", "target": "games/magic-trifle/title/background.png" },
        "title-foreground": { "type": "local", "target": "games/magic-trifle/title/foreground.png" }
      },
      "displays": [
        {
          "purpose": "game-overview-title",
          "component": {
            "type": "template",
            "foregroundTemplate": {
              "sourceType": "embedded",
              "content": "<p style=\"text-align: center;\"><img id=\"magic-trifle-title\" src=\"{{resources.title-foreground}}\" style=\"width: 80%;\" /></p>"
            },
            "backgroundTemplate": {
              "sourceType": "embedded",
              "content": ""
            },
            "backgroundStyle": {
              "background": "black",
              "backgroundImage": "url('{{resources.title-background}}')",
              "backgroundSize": "cover",
              "backgroundPosition": "center"
            },
            "data": {}
          }
        },
        {
          "purpose": "game-overview-stages",
          "component": {
            "type": "template",
            "foregroundTemplate": {
              "sourceType": "embedded",
              "content": "<h1>Stages</h1><ul>{{#gameState.stages}}<li id=\"stages-link-{{stage.id}}\">{{stage.id}} ({{availability}}, {{completion}})</li>{{/gameState.stages}}</ul>"
            },
            "backgroundTemplate": {
              "sourceType": "embedded",
              "content": ""
            },
            "backgroundStyle": {
              "background": "lightgrey"
            },
            "data": {}
          },
          "clickIdToStageId": {
            "stages-link-stage-1": "stage-1",
            "stages-link-stage-2": "stage-2",
            "stages-link-stage-3": "stage-3",
            "stages-link-stage-4": "stage-4",
            "stages-link-stage-5": "stage-5",
            "stages-link-stage-6": "stage-6"
          }
        }
      ],
      "stages": [
