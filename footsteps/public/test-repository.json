{
  "$schema": "./schemas/game-repository-schema.json",
  "games": {
    "test-game": {
      "id": "test-game",
      "title": "Test Game",
      "modules": {
        "camera": {
          "enabled": true
        }
      },
      "displays": [
        {
          "purpose": "game-overview-title",
          "component": {
            "type": "template",
            "foregroundTemplate": {
              "sourceType": "embedded",
              "content": "<h1 style='color: white;'>{{gameData.title}}</h1>"
            },
            "backgroundTemplate": {
              "sourceType": "embedded",
              "content": ""
            },
            "backgroundStyle": {
              "background": "black",
              "backgroundImage": "url('/samples/test-game/lava-cave-01.jpeg')",
              "backgroundSize": "cover",
              "backgroundPosition": "center"
            },
            "data": {}
          }
        }
      ],
      "stages": [],
      "gameContainerStyle": {
        "backgroundColor": "#222222",
        "borderRadius": "5px"
      }
    }
  }
}
